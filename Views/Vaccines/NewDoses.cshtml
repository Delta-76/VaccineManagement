@{
    ViewData["Title"] = "New Doses";
}

<h2>Add New Doses</h2>
<form asp-action="NewDoses" method="post">
  <div class="mb-3">
    <label class="form-label">Vaccine</label>
    <select name="Id" class="form-select" asp-items="ViewBag.VaccineList"></select>
  </div>
  <div class="mb-3">
    <label class="form-label">New Doses Received</label>
    <input name="NewDosesReceived" type="number" class="form-control" />
  </div>
  <button type="submit" class="btn btn-primary">Add Doses</button>
</form>
