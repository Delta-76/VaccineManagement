@model VaccineManagement.Models.Vaccine

@{
    ViewData["Title"] = "New Vaccine";
}

<h2>New Vaccine</h2>
<form asp-action="Create" method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="DosesRequired" class="form-label"></label>
    <select asp-for="DosesRequired" class="form-select">
      <option value="1">1</option>
      <option value="2">2</option>
    </select>
  </div>
  <div class="mb-3">
    <label asp-for="DaysBetweenDoses" class="form-label"></label>
    <input asp-for="DaysBetweenDoses" class="form-control" />
  </div>
  <button type="submit" class="btn btn-primary">Add Vaccine</button>
</form>
